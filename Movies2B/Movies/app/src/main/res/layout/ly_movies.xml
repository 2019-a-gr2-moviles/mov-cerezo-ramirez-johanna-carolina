<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content" android:id="@+id/lyMuseum">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="219dp" app:srcCompat="@drawable/detectivepika"
            android:id="@+id/imgMovieInList"
            android:scaleType="fitXY" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/imgMovieInList" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:background="#E1FAF9"
            android:layout_marginLeft="@dimen/cardview_compat_inset_shadow"
            android:layout_marginStart="10dp" android:layout_marginRight="10dp" android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp">
        <TextView
                android:text="Nombre Pelicula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txtViewMovieName" android:layout_weight="1"
                android:textSize="20sp" android:textColor="#2E294E" android:textStyle="bold"
                android:layout_marginLeft="10dp" android:layout_marginBottom="5dp"/>
        <TextView
                android:text="Precio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txtViewMoviePrice" android:layout_weight="1"
                android:textColor="#0AD3FF" android:textSize="16sp" android:textStyle="bold"
                android:layout_marginLeft="10dp" android:layout_marginBottom="5dp"/>
        <TextView
                android:text="Anio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txtViewMovieYear" android:layout_weight="1"
                android:textColor="#0AD3FF" android:textSize="16sp" android:textStyle="bold"
                android:layout_marginLeft="10dp" android:layout_marginBottom="5dp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>