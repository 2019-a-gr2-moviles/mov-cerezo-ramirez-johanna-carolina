<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Register" android:background="#E1FAF9">
    <android.support.design.widget.TextInputLayout
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:textColorHint="#0AD3FF"
            android:id="@+id/textInputLayout2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="66dp" android:layout_marginStart="66dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="67dp" android:layout_marginRight="67dp" android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre:" android:id="@+id/txtInNameRe"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout2"
            android:textColorHint="#0AD3FF"
            android:id="@+id/textInputLayout3"
            android:layout_marginTop="40dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="66dp" android:layout_marginStart="66dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="67dp" android:layout_marginRight="67dp">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Apellido:" android:id="@+id/txtInLastnameRe"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:textColorHint="#0AD3FF" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout3" android:layout_marginEnd="67dp"
            android:layout_marginRight="67dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="66dp"
            android:layout_marginStart="66dp" android:id="@+id/textInputLayout4">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correo:" android:textColor="#0AD3FF" android:id="@+id/txtInEmailRe"
                android:textColorHint="#0AD3FF"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout4"
            android:textColorHint="#0AD3FF"
            android:id="@+id/textInputLayout5" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="66dp" android:layout_marginStart="66dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="67dp" android:layout_marginRight="67dp" app:passwordToggleEnabled="false"
            app:passwordToggleTint="#0AD3FF">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ContraseÃ±a:" android:id="@+id/txtInPasswordRe"/>
    </android.support.design.widget.TextInputLayout>
    <Button
            android:text="Registrarse"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnRegisterRe" android:background="#0AD3FF"
            android:alpha="0.5" android:layout_marginTop="84dp"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout5"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="120dp"
            android:layout_marginStart="120dp"/>
</android.support.constraint.ConstraintLayout>