<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserMovies" android:background="#FFE1FAF9">

    <android.support.v7.widget.Toolbar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#0AD3FF"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar3" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:alpha="0.5"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/rvCurrentUserMovies"
            android:background="#FFE1FAF9" android:layout_marginTop="125dp"
            app:layout_constraintTop_toTopOf="@+id/toolbar3"/>
    <TextView
            android:text="userName, "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtViewCurrentUserNameUM" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar3" android:textColor="#0AD3FF" android:textSize="18sp"
            android:textStyle="bold"/>
    <TextView
            android:text="tus pelis son:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" android:layout_marginLeft="3dp" android:layout_marginStart="3dp"
            app:layout_constraintStart_toEndOf="@+id/txtViewCurrentUserNameUM" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar3" android:textColor="#0AD3FF" android:textSize="18sp"
            android:textStyle="bold"/>
</android.support.constraint.ConstraintLayout>