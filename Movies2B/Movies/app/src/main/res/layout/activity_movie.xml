<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MovieView" android:background="#E1FAF9">
    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/constraintLayout"
    >

        <android.support.v7.widget.Toolbar
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#0AD3FF"
                android:theme="?attr/actionBarTheme"
                android:minHeight="?attr/actionBarSize"
                android:id="@+id/toolbar2"
                android:alpha="0.5" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
        />
    </android.support.constraint.ConstraintLayout>
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/scrollView2"
            android:background="#E1FAF9" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:isScrollContainer="true"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
            app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:isScrollContainer="true" android:padding="10dp"
                      android:gravity="center_horizontal">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="219dp" app:srcCompat="@drawable/aladin"
                    android:id="@+id/imgMovie" android:scaleType="fitXY"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/linearLayout"
                    app:layout_constraintTop_toTopOf="parent"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/imgMovie" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/linearLayout">
                <TextView
                        android:text="Nombre Pelicula"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/txtViewMovieTitle" android:textSize="24sp"
                        android:textColor="#2E294E" android:textStyle="bold" android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp" android:freezesText="false"
                        android:gravity="center_horizontal" android:singleLine="false"
                        android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:padding="10dp"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="Año:"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content" android:id="@+id/textView2" android:layout_weight="0"
                            android:textColor="#2E294E" android:textSize="20dp" android:textStyle="bold"
                            android:layout_marginLeft="10dp" android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"/>
                    <TextView
                            android:text="2019"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/txtViewYear" android:layout_weight="1"
                            android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:textSize="20sp"
                            android:textColor="#0AD3FF" android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="Genero:"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_weight="0"
                            android:textColor="#2E294E" android:textSize="20dp" android:textStyle="bold"
                            android:layout_marginLeft="10dp" android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"/>
                    <TextView
                            android:text="Fantasia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/txtViewGender"
                            android:layout_weight="1"
                            android:textColor="#0AD3FF" android:textSize="20sp" android:textStyle="bold"
                            android:layout_marginTop="5dp" android:layout_marginBottom="5dp"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="Duración:"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content" android:id="@+id/textView8" android:layout_weight="0"
                            android:textColor="#2E294E" android:textSize="20dp" android:textStyle="bold"
                            android:layout_marginLeft="10dp" android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"/>
                    <TextView
                            android:text="154min"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/txtViewDuration"
                            android:layout_weight="1"
                            android:textColor="#0AD3FF" android:textSize="20sp" android:textStyle="bold"
                            android:layout_marginTop="5dp" android:layout_marginBottom="5dp"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="Precio:"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content" android:id="@+id/textView6" android:layout_weight="0"
                            android:textColor="#2E294E" android:textSize="20dp" android:textStyle="bold"
                            android:layout_marginLeft="10dp" android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"/>
                    <TextView
                            android:text="$9.99"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/txtViewPrice"
                            android:layout_weight="1"
                            android:textColor="#0AD3FF" android:textSize="20sp" android:textStyle="bold"
                            android:layout_marginTop="5dp" android:layout_marginBottom="5dp"/>
                </LinearLayout>
                <TextView
                        android:text="Sipnopsis:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView11" android:textColor="#2E294E"
                        android:textSize="20sp" android:textStyle="bold" android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp" android:layout_marginBottom="5dp"/>
                <TextView
                        android:text="Descripcion de la pelicual con toodas sus crusilerias y mierdas xd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/txtViewDescription"
                        android:singleLine="false"
                        android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:textSize="20sp"
                        android:textColor="#0AD3FF"/>
            </LinearLayout>
            <Button
                    android:text="Comprar"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnBuyMovie"
                    android:background="#0AD3FF"
                    android:alpha="0.5"
                    android:layout_marginLeft="0dp"
                    android:layout_marginStart="131dp"
                    android:layout_marginEnd="130dp" android:layout_marginRight="0dp"
                    android:layout_marginTop="15dp" android:layout_marginBottom="10dp"/>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>