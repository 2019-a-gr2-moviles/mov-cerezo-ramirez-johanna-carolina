<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MovieView">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/scrollView2"
            tools:layout_editor_absoluteX="-16dp"
            android:background="#E1FAF9">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/aladin"
                    android:id="@+id/imgMovie" android:scaleType="fitXY"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/linearLayout"
                    app:layout_constraintTop_toTopOf="parent"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="414dp"
                    android:layout_height="355dp"
                    app:layout_constraintTop_toBottomOf="@+id/imgMovie" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/linearLayout">
                <TextView
                        android:text="Nombre Pelicula"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/txtViewMovieTitle" android:textSize="24sp"
                        android:textColor="#2E294E" android:textStyle="bold" android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp" android:freezesText="false"
                        android:gravity="center_horizontal" android:singleLine="false"
                        android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="Año:"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content" android:id="@+id/textView2" android:layout_weight="0"
                            android:textColor="#2E294E" android:textSize="20dp" android:textStyle="bold"
                            android:layout_marginLeft="10dp" android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"/>
                    <TextView
                            android:text="2019"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/txtViewMovieYear"
                            android:layout_weight="1" android:textColor="#0AD3FF" android:textSize="20sp"
                            android:textStyle="bold" android:layout_marginTop="5dp" android:layout_marginBottom="5dp"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="Genero:"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_weight="0"
                            android:textColor="#2E294E" android:textSize="20dp" android:textStyle="bold"
                            android:layout_marginLeft="10dp" android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"/>
                    <TextView
                            android:text="Fantasia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/txtViewGender"
                            android:layout_weight="1"
                            android:textColor="#0AD3FF" android:textSize="20sp" android:textStyle="bold"
                            android:layout_marginTop="5dp" android:layout_marginBottom="5dp"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="Duración:"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content" android:id="@+id/textView8" android:layout_weight="0"
                            android:textColor="#2E294E" android:textSize="20dp" android:textStyle="bold"
                            android:layout_marginLeft="10dp" android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"/>
                    <TextView
                            android:text="154min"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/txtViewTime" android:layout_weight="1"
                            android:textColor="#0AD3FF" android:textSize="20sp" android:textStyle="bold"
                            android:layout_marginTop="5dp" android:layout_marginBottom="5dp"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="Precio:"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content" android:id="@+id/textView6" android:layout_weight="0"
                            android:textColor="#2E294E" android:textSize="20dp" android:textStyle="bold"
                            android:layout_marginLeft="10dp" android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"/>
                    <TextView
                            android:text="$9.99"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/txtViewPrice"
                            android:layout_weight="1"
                            android:textColor="#0AD3FF" android:textSize="20sp" android:textStyle="bold"
                            android:layout_marginTop="5dp" android:layout_marginBottom="5dp"/>
                </LinearLayout>
                <TextView
                        android:text="Sipnopsis:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView11" android:textColor="#2E294E"
                        android:textSize="20sp" android:textStyle="bold" android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp" android:layout_marginBottom="5dp"/>
                <TextView
                        android:text="Descripcion de la pelicual con toodas sus crusilerias y mierdas xd"
                        android:layout_width="match_parent"
                        android:layout_height="126dp" android:id="@+id/txtViewDescription" android:singleLine="false"
                        android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:textSize="20sp"
                        android:textColor="#0AD3FF"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <Button
            android:text="Comprar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnBuyMovie" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/scrollView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:background="#0AD3FF"
            android:alpha="0.5"/>
</android.support.constraint.ConstraintLayout>