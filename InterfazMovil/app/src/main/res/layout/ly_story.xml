<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="wrap_content"
                                             android:layout_height="wrap_content">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp" android:layout_marginStart="5dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="395dp"
                android:layout_height="67dp">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="64dp" tools:srcCompat="@tools:sample/avatars"
                    android:id="@+id/userPhotoImage" android:layout_weight="1" android:layout_marginLeft="10dp"
                    android:scaleType="centerInside"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1">
                <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/userNameLB"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/followersNumberLB"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="266dp" tools:srcCompat="@tools:sample/backgrounds/scenic"
                android:id="@+id/postImage" android:scaleType="centerInside" android:layout_marginLeft="10dp"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginLeft="10dp">
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@mipmap/heart"
                    android:id="@+id/likeButton" android:background="@android:color/transparent"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@mipmap/chat" android:id="@+id/commentBtn"
                    android:layout_weight="1"/>
            <Button
                    android:text="Remix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/remixBtn" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginLeft="10dp">
            <TextView
                    android:text="200"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/numberLikesLB" android:layout_weight="1"/>
            <TextView
                    android:text="Likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_weight="1"/>
            <TextView
                    android:text="10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/numberCommentsLB" android:layout_weight="1"/>
            <TextView
                    android:text="Comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView6" android:layout_weight="1"/>
            <TextView
                    android:text="12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/numberRemixLB" android:layout_weight="1"/>
            <TextView
                    android:text="Remixes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView8" android:layout_weight="1"/>
        </LinearLayout>
        <TextView
                android:text="Descripcion"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/descriptionLB" android:layout_weight="1"
                android:layout_marginLeft="10dp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>